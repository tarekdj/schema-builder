{
    "name": "tarekdj/schema-builder",
    "description": "Fork of illuminate/database to use the schema builder alone. Based on Robert Clancy's work. See https://github.com/robclancy/schema-builder/",
    "keywords": ["schema", "database", "sql"],
    "authors": [
        {
            "name": "Tarek Djebali",
            "email": "tarekdj@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "mockery/mockery": "0.7.2",
        "phpunit/phpunit": "3.7.*"
    },
    "suggest": {
        "robclancy/db-connector": "1.0.x"
    },
    "autoload": {
        "psr-0": {
            "Robbo\\SchemaBuilder": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev"
}
